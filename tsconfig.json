{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@database/*": ["database/*"],
      "@config/*": ["config/*"],
      "@infra/*": ["infra/*"],
      "@utils/*": ["utils/*"]
    },
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
